<%= form_with model: @score, local: true do |f|%>
  <div class="field">
    <%= f.label :schedule, "This Weekday Competition" %><br />
    <%= f.collection_select(:schedule_id, Schedule.all, :id, :name, {}, {class: :form__text}) %>
     <%# <%= f.text_field :schedule_id %>  
  </div>

  <div class="field">
    <%= f.label :score, "Your's Score" %><br />
    <%= f.text_area :score, class: :form__text %>
  </div>

  
  <div class="field">
    <%= f.label :image, "Your's Photo" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>


