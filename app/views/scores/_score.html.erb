<div class="card">
  <%= link_to image_tag(score.image, class: :card__img ), score_path(score) %>
  <div class="card__body">
    <%= link_to score.title, score_path(score), class: :card__title%>
    <p class="card__summary">
      <%= score.score %>
    </p>
    <%= link_to "by #{score.user.name}", root_path, class: :card__user %>
  </div>
</div>